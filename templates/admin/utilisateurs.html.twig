</div>


    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">
                    <h5 class="card-header">Listes de utilisateurs et administrateurs</h5>
                    <div class="card-body">
                        <div class="custom-table">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">Pseudo</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prenom</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Campus</th>
                                    <th scope="col">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for utilisateur in listeUtilisateurs %}

                                    <tr>
                                        <td>{{ utilisateur.pseudo }}</td>
                                        <td>{{ utilisateur.nom }}</td>
                                        <td>{{ utilisateur.prenom }}</td>
                                        <td>{{ utilisateur.email }}</td>
                                        <td>{{ utilisateur.campus.nom }}</td>
                                        {% if utilisateur.administrateur == false %}
                                            <td><a href="{{ path('admin_toggleUtilisateur', {'id': utilisateur.id}) }}" class="lienTableau">{{ utilisateur.actif ? "Rendre inactif" : "RÃ©activer" }}</a> - <a href="{{ path('admin_deleteUtilisateur', {'id' : utilisateur.id}) }}" class="lienTableau">Supprimer</a></td>
                                        {% else %}
                                            <td>Administrateur</td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
{#                                <a href="{{ path('admin_inscrire_utilisateur') }}"><button type="button" class="btn btn-warning ">Inscrire un nouvel tilisateur</button></a>#}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>


        </div>
        <br>
        <a href="{{ path('admin_inscrire_utilisateur') }}"><button type="button" class="btn btn-warning " >Inscrire un nouvel utilisateur</button></a>
        <button type="button" class="btn btn-warning " onclick=window.location.href="{{ path('admin_app_import_csv')}}">Inscrire utilisateur via .CSV</button>
        <br>
        <br>


    </div>

{% endblock %}

