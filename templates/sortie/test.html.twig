{% extends 'base.html.twig' %}
  {% block body %}
<button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleModal">

<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    {{ form_start(lieuType) }}
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nouveau lieu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{ form_widget(lieuType)}}
                <br>
                <button class="btn btn-light" type="submit">Ajouter</button>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-outline-warning">Enregistrer</button>
            </div>
        </div>
        {{ form_end(lieuType) }}
    </div>
</div>

    {% endblock %}