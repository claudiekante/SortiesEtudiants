{% extends 'base.html.twig' %}

{% block title %} Modifier la sortie {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p> </p>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p> </p>
                <h1 class="h3 mb-3 font-weight-normal">Modifier une sortie</h1>
            </div>

        </div>
        <br>
        <div class="row">

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                {{ form_start(lieuType) }}
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Nouveau lieu</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_widget(lieuType)}}
                            <button type="button" class="btn btn-light" data-dismiss="modal">Fermer</button>
                            <button class="btn btn-outline-warning" type="submit">Ajouter</button>
                            {{ form_end(lieuType) }}
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>
            <!--Modal-->

            <div class="col-12 d-flex justify-content-center">
                <div class="card" style="width: 28rem;">
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.lieu) }}
{#                        {{ form_widget(form) }}#}
                        <button type="button" class="btn btn-outline-warning" style="margin-left: 60%" data-toggle="modal" data-target="#exampleModal">
                            Ajouter un lieu
                        </button><br>

                        {{ form_row(form.nom) }}
                        {{ form_row(form.dateHeureDebut) }}
                        {{ form_row(form.duree) }}
                        {{ form_row(form.dateLimitInscription) }}
                        {{ form_row(form.nbInscriptionsMax) }}
                        {{ form_row(form.infosSortie) }}
                        <i style="font-size: small">* Champ obligatoire</i><br>
                        <br>
                        <button type="submit" class="btn btn-danger" name="createSortie" value="Créée" onclick=window.location.href="{{ path('creer') }}>Enregistrer sans publier</button>
                        <button type="submit" class="btn btn-warning" name="createSortie" value="Ouverte">Publier</button>
                        <a href="javascript:history.go(-1)">
                            <button type="button" class="btn btn-secondary">Retour</button>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>

{% endblock %}



